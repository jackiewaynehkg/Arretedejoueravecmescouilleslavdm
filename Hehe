<script>
const zone = document.getElementById("zone");
const yesBtn = document.getElementById("yesBtn");
const noBtn = document.getElementById("noBtn");
const result = document.getElementById("result");
const hint = document.getElementById("hint");

/* CONFETTI */
const confettiCanvas = document.getElementById("confettiCanvas");
const confettiInstance = confetti.create(confettiCanvas, { resize: true });

function fullScreenConfetti() {
  confettiInstance({ particleCount: 300, spread: 140, origin: { y: 0.6 } });
}

/* YES GROSSIT */
let yesScale = 1;
function growYes() {
  yesScale = Math.min(3, yesScale + 0.15);
  yesBtn.style.transform = `translateY(-50%) scale(${yesScale})`;
}

/* TEXTES DU NON */
const noTexts = [
  "Non",
  "Attends ðŸ˜³",
  "C'Ã©tait une blague",
  "Pourquoi tu cours ðŸ˜‚",
  "STOP",
  "OK PEUT-ÃŠTRE"
];
let noIndex = 0;

/* TELEPORTATION */
function teleportNo() {
  const z = zone.getBoundingClientRect();
  const b = noBtn.getBoundingClientRect();

  noBtn.style.left = Math.random() * (z.width - b.width) + "px";
  noBtn.style.top  = Math.random() * (z.height - b.height) + "px";
  noBtn.style.transform = `rotate(${Math.random() * 360}deg)`;

  noBtn.textContent = noTexts[Math.min(noIndex++, noTexts.length - 1)];
  growYes();
  if (navigator.vibrate) navigator.vibrate(30);
}

/* FUIT */
zone.addEventListener("pointermove", e => {
  const b = noBtn.getBoundingClientRect();
  const d = Math.hypot(
    (b.left + b.width / 2) - e.clientX,
    (b.top + b.height / 2) - e.clientY
  );

  if (d < 120) {
    Math.random() < 0.5 ? teleportNo() : teleportNo();
  }
});

noBtn.addEventListener("click", e => e.preventDefault());

/* YES CLICK */
yesBtn.addEventListener("click", () => {
  zone.style.display = "none";
  hint.style.display = "none";
  result.style.display = "block";
  fullScreenConfetti();

  const text = "ðŸ“¸ Screenshot obligatoire.";
  let i = 0;
  const el = document.getElementById("screenshotText");
  const typing = setInterval(() => {
    el.textContent += text[i++];
    if (i === text.length) clearInterval(typing);
  }, 50);
});
</script>
